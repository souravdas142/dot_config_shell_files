#
# ~/.bash_profile
#

[[ -f ~/.bashrc ]] && . ~/.bashrc


count=0
while [[ ! $DISPLAY && $XDG_VTNR -eq 1 ]]
do

count=$( expr $count + 1 )
echo "trying to startX $count"

if systemctl -q is-active graphical.target ; then

	echo "starting startX......($count)"
	exec startx 
	flag2=$?
	if [ $flag2 -eq 0 ]; then
		echo "executed startX..."
		break
	fi

else
	echo "waiting to start grphical.target..."
	sleep 4

fi

done
